{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Theatre_TimeLine": "Debug",
      "Theatre_TimeLine.Controllers.AuthenticationMetaDataController": "Trace"
    }
  },
  "AllowedHosts": "*",
  "TenantManager": {
    "BannerAllowFiletypes": ".jpg,.jpeg,.png,.gif",
    "DataPath": "%home%/Webapp/Data"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<your-tenantid>",
    "ClientId": "<your-clientid>",
    "ValidateAuthority": true,
    "CallbackPath": "/signin-oidc"
  }
}
